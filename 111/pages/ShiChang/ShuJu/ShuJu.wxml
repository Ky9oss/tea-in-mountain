<block wx:for="{{shujuList}}" wx:for-item="item" wx:for-index="index">
  <view class = "container" >
    <image class = "beijing" src = "{{item.beijing}}"></image>
    <image class = "hudie" src = "{{item.hudie}}"></image>
    <image class = "title" src = "{{item.title}}"></image>
    <image class = "cat" catchtap="stop" wx:if="{{isplay==true}}" src = "{{item.cat}}"></image>
    <image class = "cat2" catchtap="play" wx:if="{{isplay==false}}" src = "{{item.cat2}}"></image>
    <text class = "shiju">{{item.shiju}}</text>
    <text class = "title2">{{item.title1}}</text>
    <text class = "zhengwen1" decode = "{{true}}">{{item.zhengwen1}}</text>
    <text class = "zhengwen2" decode = "{{true}}">{{item.zhengwen2}}</text>
    <text class = "zhengwen3" decode = "{{true}}">{{item.zhengwen3}}</text>
    <text class = "zhengwen1" decode = "{{true}}">{{item.zhengwen4}}</text>
    <text class = "zhengwen2" decode = "{{true}}">{{item.zhengwen5}}</text>
    <text class = "zhengwen3" decode = "{{true}}">{{item.zhengwen6}}</text>
    <text class = "title2">{{item.title2}}</text>
    <text class = "zhengwen1" decode = "{{true}}">{{item.zhengwen7}}</text>
    <text class = "title2">{{item.title3}}</text>
    <text class = "zhengwen2" decode = "{{true}}">{{item.zhengwen8}}</text>
 </view>
</block>