
<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="cloud://cloud1-1g5qoncwdf499cb0.636c-cloud1-1g5qoncwdf499cb0-1310581230/loading.gif"></image>
  </view>
  <block wx:else>
    <image class="title" src="cloud://cloud1-1g5qoncwdf499cb0.636c-cloud1-1g5qoncwdf499cb0-1310581230/zhizuotu_2.png"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="wave" src="cloud://cloud1-1g5qoncwdf499cb0.636c-cloud1-1g5qoncwdf499cb0-1310581230/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="cloud://cloud1-1g5qoncwdf499cb0.636c-cloud1-1g5qoncwdf499cb0-1310581230/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
         <image class="smalltitle" src="cloud://cloud1-1g5qoncwdf499cb0.636c-cloud1-1g5qoncwdf499cb0-1310581230/zhizuotu_5.png"></image>
        <view class="confirm-btn" bindtap='goToIndex'>
          <text>开启旅程</text>
        </view>
        <view class= "container2">
        <image class ="xinshou" catchtap="onTapJump1" src = "cloud://cloud1-1g5qoncwdf499cb0.636c-cloud1-1g5qoncwdf499cb0-1310581230/zhizuotu_xinshou.png"></image>
        </view>
      </view>
      <image class="yun" src="cloud://cloud1-1g5qoncwdf499cb0.636c-cloud1-1g5qoncwdf499cb0-1310581230/yun1.com.png"></image>
    </view>
  </block>
</view>